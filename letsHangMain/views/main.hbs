<!DOCTYPE html>
<html>
	<head>
		<title>Let's Hang - Main</title>
		<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
		<link rel="stylesheet" href="css/style.css">
		<script src="http://code.jquery.com/jquery-2.1.1.min.js"></script>
		<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBfIApUobHr1J1OYNpBIy9D1AL5cfZadgs"></script>
    <!--<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.15/angular.min.js"></script>
    <script src="js/ang.js"></script>-->
		<script src="js/routes.js"></script>
    <script src="js/map.js"></script>
    <script src="js/newActivity.js"></script>
	</head>
	<body>
		<header class="navbar navbar-static-top bs-docs-nav" id="top" role="banner">
  			<div class="container">
    			<div class="navbar-header">
      				<button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
        				<span class="sr-only">Toggle navigation</span>
        				<span class="icon-bar"></span>
				        <span class="icon-bar"></span>
				        <span class="icon-bar"></span>
      				</button>
      				<a href="/" class="navbar-brand">Let's Hang</a>
    			</div>
    			<nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
      				<ul class="nav navbar-nav">
        				<li>
          				<button id="activities" class="btn btn-link">Activities</button>
                  <ul class="hidden-list">
                  </ul>
        				</li>
                <li>
                  <button id="messages" class="btn btn-link">Messages</button>
                  <ul class="hidden-list">
                  </ul>
                </li>
                <li>
                  <button id="locations" class="btn btn-link">Locations</button>
                  <ul class="hidden-list">
                  </ul>
                </li>
      				</ul>
    			</nav>
          <button id="logout" class="btn btn-link">logout</button>
  			</div>
		</header>
    <div class="container">
      <div id="map-canvas" style="width:100%; height:100%;"></div>
      <div id="newActOverlay">
        <h2>New Activity</h2>
        <form id="newActForm" class="input-group">
          <input id="newActName" class="form-control" type="text" placeholder="Activity Name">
          <input id="newActLoct" class="form-control" type="text" placeholder="Location">
          <input id="startDate" class="form-control" type="date">
          <input id="addDate" class="btn btn-link" type="button" value="More Than One Day">
          <input id="startTime" class="form-control" type="time">
          <input id="addEnd" class="btn btn-link" type="button" value="Add End Time">
          <input id="newActInv" class="btn btn-primary" type="button" value="invite" data-toggle="modal" data-target="#invModal">
          <input id="newActSub" class="btn btn-success" value="create">
        </form>
        <button id="overlayShowHide" class="btn btn-default"><i class="glyphicon glyphicon-chevron-up"></i></button>
      </div>
    </div>
    <div class="modal fade" id="invModal" tabindex="-1" role="dialog" aria-labelledby="invModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Invite People</h4>
          </div>
          <div class="modal-body">
            <button id="localInvBtn" class="btn">Let's Hang With Friends</button>
            <button id="fbInvBtn" class="btn"><i class="fa fa-facebook"></i> Let's Hang With Facebook</button>
            <button id="twInvBtn" class="btn"><i class="fa fa-twitter"></i> Let's Hang With Twitter</button>
            <button id="gInvBtn" class="btn"><i class="fa fa-google-plus"></i> Let's Hang With Google plus</button>
            <button id="liInvBtn" class="btn"><i class="fa fa-linkedin"></i> Let's Hang With Linked In</buttin>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div>
  </body>
</html>